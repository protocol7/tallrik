﻿{slab player}
<div class="player">
	<div class="perform-settings">Performing: 
		<a href="#" class="perform-soon">Next X hours</a> | 
		<a href="#" class="perform-thursday">Thursday</a> | 
		<a href="#" class="perform-friday">Friday</a> | 
		<a href="#" class="perform-saturday">Saturday</a>
	</div>
	<div class="now-playing-container"></div>
	<div class="control-buttons"><a href="#" class="play-button">►</a><a href="#" class="skip-button">►►</a></div>
	<div class="tuner-container"></div>
  <div class="recommended-artists-container"></div>
</div>
{endslab}
{slab nowPlaying}
<div class="now-playing">
	<div class="scene-info">On <div class="emp">{scene}</div> in <div class="emp">{due}</div>:</div>
	<div class="border"></div>
	<div class="image-container"></div>
	<div class="border"></div>
	<a href="{artistUri}" class='artist'>{artist}</a>
	<div class='title'>{title}</div>
</div>
{endslab}
{slab nowPlayingImage}
<div class="now-playing-image">
	<div class="background" style="background: url('{image2}') center center"></div>
	<div class="background-dimmer"></div>
	<img src="{image}" class='track-image'>
</div>
{endslab}
